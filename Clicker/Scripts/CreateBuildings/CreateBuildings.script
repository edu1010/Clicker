function on_message(self, message_id, message, sender)
	-- Add message-handling code here
	-- Learn more: https://defold.com/manuals/message-passing/
	-- Remove this function if not needed
	if message_id == hash("CreateBar") then
		if(numberOfDollars>=self.cost_ofBars) and self.numberOfBars <= 5 then
			numberOfDollars = numberOfDollars-self.cost_ofBars
			msg.post("/Clicker#TextDollarsGui", "setText",{numberOfDollarsT = numberOfDollars })
			local pos =  vmath.vector3(432,339,0.5)
			self.numberOfBars = self.numberOfBars +1
			if(self.numberOfBars <= 5)then
				for i=1, self.numberOfBars do
					if i>1 then
						pos = pos + vmath.vector3(100, 0, 0)
					end
				end
				local spawnBar = factory.create("#factoryBar", pos, nil, nil, 0.4)
			end
		end
		
	end
	if message_id == hash("CreateHospital") then
		if(numberOfDollars>=self.cost_ofHospital) and self.numberOfHospitals <= 5 then
			numberOfDollars = numberOfDollars-self.cost_ofHospital
			msg.post("/Clicker#TextDollarsGui", "setText",{numberOfDollarsT = numberOfDollars })
			local pos =  vmath.vector3(432,70,0.5)
			self.numberOfHospitals = self.numberOfHospitals +1
			if(self.numberOfHospitals <= 5)then
				for i=1, self.numberOfHospitals do
					if i>1 then
						pos = pos + vmath.vector3(100, 0, 0)
					end
				end
				local spawn = factory.create("#factoryHospital", pos, nil, nil, 0.4)
			end
		end
		
	end
	
	if message_id == hash("CreateFactory") then
		if(numberOfDollars>=self.cost_ofFactory) and self.numberOfFactorys <= 5 then
			numberOfDollars = numberOfDollars-self.cost_ofFactory
			msg.post("/Clicker#TextDollarsGui", "setText",{numberOfDollarsT = numberOfDollars })
			local pos =  vmath.vector3(432,201,0.5)
			self.numberOfFactorys = self.numberOfFactorys +1
			if(self.numberOfFactorys <= 5)then
				for i=1, self.numberOfFactorys do
					if i>1 then
						pos = pos + vmath.vector3(100, 0, 0)
					end
				end
				local spawn = factory.create("#factoryFactory", pos, nil, nil, 0.4)
			end
		end
		end
		
end

function update(self, dt)
	-- Add update code here
	-- Learn more: https://defold.com/manuals/script/
	-- Remove this function if not needed
	if go.get_scale("/ButtonBar") == vmath.vector3(0.45, 0.45, 0.45) then
		self.timer = self.timer + dt
		if self.timer > 0.1 then
			local originalScale = vmath.vector3(0.5, 0.5, 0.5)
			go.set_scale(originalScale, "/ButtonBar")
			self.timer = 0
		end
	end
	if go.get_scale("/ButtonHospital") == vmath.vector3(0.45, 0.45, 0.45) then
		self.timer = self.timer + dt
		if self.timer > 0.1 then
			local originalScale = vmath.vector3(0.5, 0.5, 0.5)
			go.set_scale(originalScale, "/ButtonHospital")
			self.timer = 0
		end
	end
	if go.get_scale("/ButtonFactory") == vmath.vector3(0.45, 0.45, 0.45) then
		self.timer = self.timer + dt
		if self.timer > 0.1 then
			local originalScale = vmath.vector3(0.5, 0.5, 0.5)
			go.set_scale(originalScale, "/ButtonFactory")
			self.timer = 0
		end
	end
end

